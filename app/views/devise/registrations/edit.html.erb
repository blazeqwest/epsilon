<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <fieldset>
    <legend>Edit your registration info:</legend>
      <%if (devise_error_messages! != "")%>
        <div data-alert class="alert-box warning radius">
          <%= sanitize(devise_error_messages!, tags: %w())%>
          <%= link_to 'x', "#", class: "close" %>
        </div>
      <%end%>
    <label>Email
      <%= f.email_field :email, autofocus: true, :input_html => { :value => @user.email } %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </label>
    <label>Password
      <%= f.password_field :password, autocomplete: "off", placeholder: "leave blank if you don't want to change it"  %>
    </label>
    <label>Confirm password
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </label>
    <label>Current password
      <%= f.password_field :current_password, autocomplete: "off", placeholder: "we need your current password to confirm your changes" %>
    </label>
    <%= f.submit "Update", class: "button round" %>
    <hr>
    <%= link_to "Unhappy? Cancel my account",
                registration_path(resource_name),
                data: { confirm: "Are you sure?" },
                method: :delete, class: "button round" %>
  </fieldset>
<%end%>


