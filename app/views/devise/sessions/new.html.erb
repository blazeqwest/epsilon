<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset>
    <legend>Sign in</legend>
    <label>Email
      <%= f.email_field :email, autofocus: true, placeholder: "Email goes here..." %>
    </label>
    <label>Password
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password here..." %>
    </label>  
    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %><label for="checkbox">Remember me</label>
    <% end -%>
    <br>
    <%= f.submit "Sign in", class: "button radius" %> or 
    <%= render "devise/shared/links" %>
  </fieldset>
<% end %>
