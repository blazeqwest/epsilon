<%= form_for :transaction, url: account_transaction_path,:method => :put  do |f| %>
  <fieldset>
    <legend>Update transaction</legend>
    <label>Update amount
      <%= f.text_field :amount, :input_html => { :value => @transaction.amount } %>
    </label>
    <%= f.submit "Update transaction", class:"button radius" %>  
  </fieldset>
<% end %>