<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Spent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.title %></td>
        <td><%= budget.amount %></td>
        <td></td>
        <td></td>
        <td>
          <%= link_to 'Show', budget %> |
          <%= link_to 'Edit', edit_budget_path(budget) %> |
          <%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

